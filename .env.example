# 对象存储配置 (可选) - 支持 Cloudflare R2 和 Alibaba Cloud OSS
STORAGE_TYPE=r2  # 'r2' for Cloudflare R2, 'oss' for Alibaba Cloud OSS

# Cloudflare R2 配置
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET=your_r2_bucket_name
R2_PUBLIC_URL=https://your-custom-domain.com  # 你的R2自定义域名

# Alibaba Cloud OSS 配置 (旧版兼容)
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=your_access_key_id
OSS_ACCESS_KEY_SECRET=your_access_key_secret
OSS_BUCKET=your_bucket_name
OSS_BASE_URL=https://your-bucket.oss-cn-hangzhou.aliyuncs.com

# Google Analytics (可选)
NEXT_PUBLIC_GOOGLE_MEASUREMENT_ID=your_measurement_id

# Google Search Console (可选)  
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your_verification_code

# Utterances 评论 (可选)
NEXT_PUBLIC_UTTERANCES_REPO=your_github_username/your_repo_name

# 部署环境
VERCEL_ENV=production